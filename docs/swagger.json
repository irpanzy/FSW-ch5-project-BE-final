{
    "openapi": "3.0.0",
    "info": {
      "title": "Shop API",
      "description": "API documentation for retrieving shop data",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:3000/api/v1",
        "description": "Base URL for API"
      }
    ],
    "paths": {
      "/shops": {
        "get": {
          "summary": "Get shops data",
          "description": "Retrieve a paginated list of shops and their products.",
          "parameters": [
            {
              "name": "limit",
              "in": "query",
              "description": "Limit the number of shop records returned.",
              "required": false,
              "schema": {
                "type": "integer",
                "example": 1
              }
            },
            {
              "name": "productName",
              "in": "query",
              "description": "Filter shops by product name.",
              "required": false,
              "schema": {
                "type": "string",
                "example": "pizza"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successful response",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "status": {
                        "type": "string",
                        "example": "Success"
                      },
                      "message": {
                        "type": "string",
                        "example": "Success get shops data"
                      },
                      "isSuccess": {
                        "type": "boolean",
                        "example": true
                      },
                      "data": {
                        "type": "object",
                        "properties": {
                          "totalData": {
                            "type": "integer",
                            "example": 4
                          },
                          "totalPages": {
                            "type": "integer",
                            "example": 4
                          },
                          "currentPage": {
                            "type": "integer",
                            "example": 1
                          },
                          "shops": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "name": {
                                  "type": "string",
                                  "example": "Koelpin Inc"
                                },
                                "adminEmail": {
                                  "type": "string",
                                  "nullable": true,
                                  "example": null
                                },
                                "products": {
                                  "type": "array",
                                  "items": {
                                    "type": "object",
                                    "properties": {
                                      "name": {
                                        "type": "string",
                                        "example": "Incredible Fresh Pizza"
                                      },
                                      "images": {
                                        "type": "array",
                                        "items": {
                                          "type": "string",
                                          "example": "https://ik.imagekit.io/imamth/Profile-17-1729202156932_ieaMdNeZB.png?updatedAt=1729202158471"
                                        }
                                      },
                                      "stock": {
                                        "type": "integer",
                                        "example": 25
                                      },
                                      "price": {
                                        "type": "integer",
                                        "example": 38761
                                      }
                                    }
                                  }
                                },
                                "user": {
                                  "type": "object",
                                  "properties": {
                                    "name": {
                                      "type": "string",
                                      "example": "Mattie Schmeler"
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }